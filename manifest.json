{
    "name": "Browser Agent Buddy",
    "description": "Base Level Extension",
    "version": "0.0.1",
    "manifest_version": 3,
    "background": {
        "service_worker": "background/background.js",
        "type": "module"
    },
    "action": {
        "default_popup": "hello.html",
        "default_icon": "hello_extension.png"
    },
    "side_panel": {
        "default_path": "sidepanel.html"
    },
    "permissions": [
        "sidePanel",
        "bookmarks",
        "storage"
    ]
}